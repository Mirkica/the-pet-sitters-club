<h1><%= @user.name %>'s Profile</h1>
<p>Email: <%= @user.email %></p>

<%= link_to 'Edit Profile', edit_profile_path %>


<h2>Your Pets</h2>

<% if current_user.pets.any? %>
  <ul>
    <% current_user.pets.each do |pet| %>
      <li>
        <%= pet.name %> (Breed: <%= pet.breed %>, Age: <%= pet.age %>)
        <%= link_to "Edit", edit_profile_pet_path(pet) %>
        <%= link_to "Delete", profile_pet_path(pet), method: :delete, data: { confirm: "Are you sure?" } %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>You haven't added any pets yet.</p>
<% end %>

<button data-controller="pet-form" data-action="click->pet-form#toggle" data-pet-form-target="toggleButton">Add a New Pet</button>

<div data-pet-form-target="formContainer" style="display: none;">
  <%= render 'pets/form', pet: @pet %>
</div>
