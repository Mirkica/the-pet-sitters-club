<%= form_with(model: pet, url: profile_pets_path, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="form-group">
    <%= form.label :breed %>
    <%= form.text_field :breed %>
  </div>

  <div class="form-group">
    <%= form.label :age %>
    <%= form.number_field :age %>
  </div>

  <%= form.submit "Save Pet" %>
<% end %>
